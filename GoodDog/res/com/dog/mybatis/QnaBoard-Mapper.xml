<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="QnaBoard-Mapper">
	
	<sql id="search">
		<if test="searchType == 't'.toString()">
			and title like '%'||#{keyword}||'%'
		</if>
		<if test="searchType == 'w'.toString()">
			and writer like '%'||#{keyword}||'%'
		</if>
		<if test="searchType == 'c'.toString()">
			and content like '%'||#{keyword}||'%'
		</if>
		<if test="searchType == 'tc'.toString()">
			and (
			title like '%'||#{keyword}||'%'
			or
			writer like '%'||#{keyword}||'%'
			)
		</if>
		<if test="searchType == 'cw'.toString()">
			and (
			content like '%'||#{keyword}||'%'
			or
			writer like '%'||#{keyword}||'%'
			)
		</if>
		<if test="searchType == 'tcw'.toString()">
			and (
			title like '%'||#{keyword}||'%'
			or
			content like '%'||#{keyword}||'%'
			or
			writer like '%'||#{keyword}||'%'
			)
		</if>
	</sql>
		
	<select id="selectSearchBoardList" resultType="qna">
		select *
		from   qna_board
		where  MEM_ID is not null
		<include refid="search" />
		order by QNA_DATE desc
	</select>
	
	<select id="selectSearchBoardListCount" resultType="int">
		select count(*)
		from   qna_board
		where  QNA_NO is not null
		<include refid="search" />
	
	</select>
	
	<select id="selectBoardByBno" parameterType="int" resultType="qna">
		select *
		from   qna_board
		where  QNA_NO = #{qnaNo}
	</select>

<!-- 	<select id="selectBoardSequenceNextValue" resultType="int">
		select qna_board_seq.nextVal
		from dual
	</select> -->
	
<!-- 	<update id="increaseViewCount" parameterType="int">
		update qna_board
		set    viewcnt = viewcnt + 1
		where  QNA_NO = #{qnaNo}
	</update> -->
	
	<update id="insertBoard" parameterType="qna">
		insert into
		qna_board (qna_No,mem_Id,qna_Title,qna_Content,qna_Date)
		values (#{qnaNo},#{memId},#{qnaTitle},#{qnaContent},sysdate)
	</update>
	
	<update id="updateBoard" parameterType="qna">
		update qna_board
		set    qna_Title = #{qnaTitle},
		       qna_Content = #{qnaContent}
		where QNA_NO = #{qnaNo}
	</update>
	
	<update id="deleteBoard" parameterType="int">
		delete from  qna_board
		where QNA_NO = #{qnaNo}
	</update>
	
</mapper>